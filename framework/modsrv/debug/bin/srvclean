#!bin/lneox
dofile(os.getenv('ENGINE_PATH')..'/bin/luaenv')

local usage = 'srvclean gamesrv1'
local srvname = arg[1]
if not srvname then
    print(usage)
    os.exit(1)
end
local filepath = string.format('proc/%s/pid', srvname)
print(filepath)
if not File.exists(filepath) then
    print(string.format('%s not found', srvname))
    return
end
File.remove(filepath)
