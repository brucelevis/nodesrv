
local engine_path = os.getenv('ENGINE_PATH')
asset_dir = string.format('%s/asset', engine_path)

package.path = string.format('%s;%s/?.lua', package.path, engine_path)

package.path = string.format('%s;%s/?.lua', package.path, asset_dir)
package.path = string.format('%s;%s/script/?.lua', package.path, asset_dir)
package.path = string.format('%s;%s/script/lib/?.lua', package.path, asset_dir)
package.path = string.format('%s;%s/script/gatesrv/?.lua', package.path, asset_dir)

require('config')
if not Config.proc_dir then
    Config.proc_dir = 'proc'
end
if not Config.asset_dir then
    Config.asset_dir = 'asset'
end

require('mod/mod')
table.insert(Mod.search_path, string.format('%s', asset_dir))
table.insert(Mod.search_path, string.format('%s/script', asset_dir))
table.insert(Mod.search_path, string.format('%s/script/lib', asset_dir))
